<%= form_with model: contact,
      class: "space-y-4",
      html: {
        "up-validate" => "",
        "up-disable" => "[type=submit]"
      } do |f| %>

  <%= render 'shared/errors', object: contact %>

  <div class="grid grid-cols-2 gap-3">
    <div class="contact-field-group">
      <%= f.label :first_name, class: "block text-xs font-medium text-gray-500 mb-1" %>
      <%= f.text_field :first_name,
            autofocus: contact.new_record?,
            class: "form-input w-full px-3 py-2 text-sm border rounded-lg bg-white #{contact.errors[:first_name].any? ? 'border-red-400' : 'border-gray-200'}" %>
      <% if contact.errors[:first_name].any? %>
        <p class="mt-1 text-xs text-red-600"><%= contact.errors[:first_name].first %></p>
      <% end %>
    </div>
    <div class="contact-field-group">
      <%= f.label :last_name, class: "block text-xs font-medium text-gray-500 mb-1" %>
      <%= f.text_field :last_name,
            class: "form-input w-full px-3 py-2 text-sm border rounded-lg bg-white #{contact.errors[:last_name].any? ? 'border-red-400' : 'border-gray-200'}" %>
      <% if contact.errors[:last_name].any? %>
        <p class="mt-1 text-xs text-red-600"><%= contact.errors[:last_name].first %></p>
      <% end %>
    </div>
  </div>

  <div class="contact-field-group">
    <%= f.label :email, class: "block text-xs font-medium text-gray-500 mb-1" %>
    <%= f.email_field :email,
          class: "form-input w-full px-3 py-2 text-sm border rounded-lg bg-white #{contact.errors[:email].any? ? 'border-red-400' : 'border-gray-200'}" %>
    <% if contact.errors[:email].any? %>
      <p class="mt-1 text-xs text-red-600"><%= contact.errors[:email].first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :phone, class: "block text-xs font-medium text-gray-500 mb-1" %>
    <%= f.telephone_field :phone,
          class: "form-input w-full px-3 py-2 text-sm border border-gray-200 rounded-lg bg-white" %>
  </div>

  <%# Company select with reactive dependent fields %>
  <div>
    <%= f.label :company_id, "Company", class: "block text-xs font-medium text-gray-500 mb-1" %>
    <div class="flex gap-2 items-center">
      <div class="flex-1">
        <%= f.select :company_id,
              options_from_collection_for_select(@companies, :id, :name, contact.company_id),
              { include_blank: "— None —" },
              "up-watch" => "up.submit(this.closest('form'), { target: '#company-fields', failTarget: '#company-fields' })",
              "up-watch-delay" => "0",
              class: "form-input w-full px-3 py-2 text-sm border border-gray-200 rounded-lg bg-white" %>
      </div>
      <%# Create company subinteraction — opens nested modal; up-on-accepted injects the new option %>
      <%= link_to "+ New company", new_company_path,
            "data-overlay-link" => "",
            "up-on-accepted" => "let opt = new Option(event.value.name, event.value.id, true, true); document.querySelector('#contact_company_id').add(opt); document.querySelector('#contact_company_id').value = event.value.id;",
            class: "btn-ghost gap-1 px-4 py-2" %>
    </div>

    <%# Reactive dependent company fields — re-rendered on select change %>
    <div id="company-fields">
      <%= render 'company_fields', contact: contact %>
    </div>
  </div>

  <%# Tags checklist %>
  <% if @tags&.any? %>
    <div>
      <span class="block text-xs font-medium text-gray-500 mb-2">Tags</span>
      <div class="flex flex-wrap gap-2">
        <% @tags.each do |tag| %>
          <label class="tag-picker-item cursor-pointer select-none">
            <%= f.check_box :tag_ids, { multiple: true, checked: contact.tag_ids.include?(tag.id), class: "sr-only" }, tag.id, false %>
            <span class="tag-pill inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold text-white"
                  style="background-color: <%= tag.color %>;">
              <%= tag.name %>
            </span>
          </label>
        <% end %>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :notes, class: "block text-xs font-medium text-gray-500 mb-1" %>
    <%= f.text_area :notes, rows: 3,
          class: "form-input w-full px-3 py-2 text-sm border border-gray-200 rounded-lg bg-white resize-none" %>
  </div>

  <div class="flex justify-end gap-3 pt-3 border-t border-gray-100">
    <% if up.layer.overlay? %>
      <button type="button" class="btn-cancel px-4 py-2" up-dismiss="">Cancel</button>
    <% end %>
    <%= f.submit contact.new_record? ? "Create Contact" : "Save Changes",
          class: "btn-primary px-4 py-2" %>
  </div>
<% end %>
