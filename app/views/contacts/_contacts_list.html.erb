<%# Filter tabs — primary navigation %>
<div class="px-4 pt-3 pb-2.5">
  <div class="flex gap-1">
    <%= link_to "All", contacts_path(q: params[:q]),
          class: "filter-pill px-3 py-1 rounded-full text-xs font-medium #{params[:filter].blank? ? 'active' : ''}",
          "up-target" => "#contacts-list",
          "up-alias" => "/contacts" %>
    <%= link_to "Starred", contacts_path(filter: "starred", q: params[:q]),
          class: "filter-pill px-3 py-1 rounded-full text-xs font-medium #{params[:filter] == 'starred' ? 'active' : ''}",
          "up-target" => "#contacts-list" %>
    <%= link_to "Archived", contacts_path(filter: "archived", q: params[:q]),
          class: "filter-pill px-3 py-1 rounded-full text-xs font-medium #{params[:filter] == 'archived' ? 'active' : ''}",
          "up-target" => "#contacts-list" %>
  </div>
</div>

<%# Sort row + count — secondary, compact, on one line %>
<div class="px-4 py-2 border-b border-sidebar-border flex items-center justify-between">
  <div class="flex items-center gap-0.5">
    <svg class="text-gray-600 mr-1.5 flex-shrink-0" width="11" height="11" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="8" y1="6" x2="21" y2="6"/><line x1="8" y1="12" x2="21" y2="12"/><line x1="8" y1="18" x2="21" y2="18"/><line x1="3" y1="6" x2="3.01" y2="6"/><line x1="3" y1="12" x2="3.01" y2="12"/><line x1="3" y1="18" x2="3.01" y2="18"/></svg>
    <% sort_options = [["Name", nil], ["First", "first_name"], ["Added", "created_at"], ["Company", "company"]] %>
    <% current_sort = params[:sort] %>
    <% sort_options.each_with_index do |(label, sort_value), i| %>
      <%= link_to label,
            contacts_path(sort: sort_value, filter: params[:filter], q: params[:q]),
            class: "sort-link text-[11px] px-1.5 py-0.5 rounded transition-colors #{current_sort == sort_value ? 'text-accent font-semibold' : 'text-gray-500 hover:text-gray-300'}",
            "up-target" => "#contacts-list" %>
      <% unless i == sort_options.length - 1 %>
        <span class="text-gray-700 text-[10px] select-none">·</span>
      <% end %>
    <% end %>
  </div>
  <span class="text-[11px] text-gray-600 tabular-nums"><%= contacts.size %></span>
</div>

<%# Contact rows %>
<div class="flex-1">
  <% if contacts.empty? %>
    <div class="p-8 text-center">
      <p class="text-gray-500 text-sm">No contacts found</p>
    </div>
  <% else %>
    <% contacts.each do |contact| %>
      <%= render 'contact_row', contact: contact %>
    <% end %>
  <% end %>
</div>
