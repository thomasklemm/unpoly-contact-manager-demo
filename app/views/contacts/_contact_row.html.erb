<%= link_to contact_path(contact),
      "up-target" => "#contact-detail",
      "up-history" => "true",
      "up-alias" => "/contacts/*",
      "up-preload" => "",
      "up-instant" => "",
      class: "contact-row contact-row-#{contact.id} flex items-center gap-3 px-4 py-3 cursor-pointer group" do %>
  <%# Avatar with initials %>
  <% hue = contact.id * 37 % 360 %>
  <div class="w-9 h-9 rounded-lg flex items-center justify-center text-white font-medium text-xs flex-shrink-0 shadow-sm"
       style="background: hsl(<%= hue %>, 45%, 55%);">
    <%= contact.first_name[0].upcase %><%= contact.last_name[0].upcase %>
  </div>

  <%# Name + company %>
  <div class="flex-1 min-w-0">
    <div class="flex items-center gap-1.5">
      <span class="font-medium text-gray-200 truncate text-[13px] group-hover:text-white transition-colors"><%= contact.full_name %></span>
      <% if contact.starred? %>
        <span class="text-accent text-xs">â˜…</span>
      <% end %>
    </div>
    <% if contact.company %>
      <div class="text-xs text-gray-500 truncate mt-0.5"><%= contact.company.name %></div>
    <% end %>
  </div>

  <%# Tags (first 2 only) %>
  <div class="flex gap-1 flex-shrink-0">
    <% contact.tags.first(2).each do |tag| %>
      <span class="inline-block w-2 h-2 rounded-full ring-1 ring-black/20" style="background-color: <%= tag.color %>;" title="<%= tag.name %>"></span>
    <% end %>
  </div>
<% end %>
