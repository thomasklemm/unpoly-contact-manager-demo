<%# Two-panel contact manager layout %>

<%# LEFT PANEL: sidebar wrapper (search lives here, outside the replaced fragment) %>
<div id="contacts-sidebar">
  <%# App branding + search %>
  <div class="p-4 pb-3">
    <div class="flex items-center justify-between mb-4">
      <h1 class="font-display text-xl text-white tracking-tight">Contacts</h1>
      <div class="flex items-center gap-1.5">
        <button type="button"
                class="theme-toggle w-8 h-8 flex items-center justify-center rounded-lg"
                title="Toggle dark mode"
                onclick="document.documentElement.classList.toggle('dark'); localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light');">
          <svg class="sun-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
          <svg class="moon-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
        </button>
        <button data-overlay-toggle data-current="modal" onclick="toggleOverlayStyle()"
          class="overlay-toggle-pill flex items-center gap-1 px-2 py-1 rounded-md text-[10px] font-medium tracking-wide uppercase transition-colors"
          title="Switch overlay style">
          <span class="overlay-toggle-label"></span>
        </button>
        <%= link_to new_contact_path,
              "data-overlay-link" => "",
              "up-on-accepted" => "up.reload('#contacts-list')",
              class: "w-8 h-8 flex items-center justify-center rounded-lg bg-accent/20 text-accent hover:bg-accent/30 transition-colors",
              title: "New Contact" do %>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><line x1="8" y1="3" x2="8" y2="13"/><line x1="3" y1="8" x2="13" y2="8"/></svg>
        <% end %>
      </div>
    </div>

    <%# Search form — never inside #contacts-list, so focus survives fragment swaps %>
    <%= form_with url: contacts_path, method: :get,
          id: "contacts-search-form",
          class: "relative",
          html: {
            "up-target" => "#contacts-list",
            "up-focus" => "keep",
            "up-scroll" => "false"
          } do |f| %>
      <%# Hidden filter field — kept in sync by the up.compiler in application.js %>
      <input type="hidden" id="search-filter" name="filter" value="<%= params[:filter] %>">
      <svg class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 pointer-events-none" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
      <%= f.search_field :q,
            value: params[:q],
            placeholder: "Search contacts...",
            autocomplete: "off",
            "up-autosubmit" => "",
            "up-watch-delay" => "300",
            class: "sidebar-search w-full pl-9 pr-3 py-2 text-sm rounded-lg" %>
    <% end %>
  </div>

  <%# Contact list fragment — replaced on search/filter changes %>
  <%# data-filter is read by up.compiler to keep the search form's hidden field in sync %>
  <div id="contacts-list" class="flex-1 overflow-y-auto" data-filter="<%= params[:filter] %>">
    <%= render 'contacts_list', contacts: @contacts %>
  </div>
</div>

<%# RIGHT PANEL: contact detail %>
<div id="contact-detail" class="flex items-center justify-center">
  <div class="text-center">
    <div class="w-20 h-20 rounded-2xl bg-surface-muted flex items-center justify-center mx-auto mb-4">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#c4bfb6" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
        <circle cx="12" cy="7" r="4"/>
      </svg>
    </div>
    <p class="font-display text-xl text-gray-400 italic">Select a contact</p>
    <p class="text-xs text-gray-400 mt-1.5">Choose from the list to view details</p>
  </div>
</div>
