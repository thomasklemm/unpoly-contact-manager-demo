<%# Full-page show (for direct URL visits) %>
<%# Left: minimal list placeholder; Right: detail %>
<div id="contacts-sidebar" class="flex items-center justify-center">
  <%= link_to "← All contacts", root_path,
        class: "text-blue-600 hover:underline text-sm font-medium" %>
</div>

<div id="contact-detail" data-contact-id="<%= @contact.id %>">
  <%= render 'contact_detail', contact: @contact %>
</div>

<%# Hidden contact row fragment — lets Unpoly update the sidebar row when star is toggled from the detail panel %>
<div hidden>
  <%= render 'contact_row', contact: @contact %>
</div>
