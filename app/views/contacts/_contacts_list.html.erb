<%# Filter tabs + count + new contact button %>
<div class="sticky top-0 bg-gray-50 border-b border-gray-200 z-10 p-3 space-y-2">
  <div class="flex gap-1">
    <%= link_to "All", contacts_path(q: params[:q]),
          class: "px-3 py-1 rounded-full text-xs font-medium transition-colors #{params[:filter].blank? ? 'bg-blue-600 text-white' : 'text-gray-600 hover:bg-gray-200'}",
          "up-target" => "#contacts-list",
          "up-alias" => "/contacts" %>
    <%= link_to "Starred", contacts_path(filter: "starred", q: params[:q]),
          class: "px-3 py-1 rounded-full text-xs font-medium transition-colors #{params[:filter] == 'starred' ? 'bg-blue-600 text-white' : 'text-gray-600 hover:bg-gray-200'}",
          "up-target" => "#contacts-list" %>
    <%= link_to "Archived", contacts_path(filter: "archived", q: params[:q]),
          class: "px-3 py-1 rounded-full text-xs font-medium transition-colors #{params[:filter] == 'archived' ? 'bg-blue-600 text-white' : 'text-gray-600 hover:bg-gray-200'}",
          "up-target" => "#contacts-list" %>
  </div>

  <div class="flex justify-between items-center">
    <span class="text-xs text-gray-400"><%= contacts.size %> contact<%= contacts.size == 1 ? "" : "s" %></span>
    <%= link_to "+ New Contact", new_contact_path,
          "up-layer" => "new modal",
          "up-on-accepted" => "up.reload('#contacts-list')",
          class: "text-xs font-medium text-blue-600 hover:text-blue-800" %>
  </div>
</div>

<%# Contact rows %>
<div class="flex-1">
  <% if contacts.empty? %>
    <div class="p-8 text-center text-gray-400 text-sm">
      <p>No contacts found</p>
    </div>
  <% else %>
    <% contacts.each do |contact| %>
      <%= render 'contact_row', contact: contact %>
    <% end %>
  <% end %>
</div>
