<%= form_with model: company, class: "space-y-4" do |f| %>
  <%= render 'shared/errors', object: company %>

  <div>
    <%= f.label :name, class: "block text-xs font-medium text-gray-500 mb-1" %>
    <%= f.text_field :name,
          autofocus: company.new_record?,
          class: "form-input w-full px-3 py-2 text-sm border border-gray-200 rounded-lg bg-white #{company.errors[:name].any? ? 'border-red-400' : ''}" %>
    <% if company.errors[:name].any? %>
      <p class="mt-1 text-xs text-red-600"><%= company.errors[:name].first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :website, class: "block text-xs font-medium text-gray-500 mb-1" %>
    <%= f.url_field :website, placeholder: "https://example.com",
          class: "form-input w-full px-3 py-2 text-sm border border-gray-200 rounded-lg bg-white" %>
  </div>

  <div class="flex justify-end gap-3 pt-3 border-t border-gray-100">
    <% if up.layer.overlay? %>
      <button type="button" class="btn-cancel px-4 py-2" up-dismiss="">Cancel</button>
    <% end %>
    <%= f.submit company.new_record? ? "Create Company" : "Save",
          class: "btn-primary px-4 py-2" %>
  </div>
<% end %>
