<%= form_with model: contact,
      "up-validate" => "",
      "up-disable" => "[type=submit]",
      class: "space-y-4" do |f| %>

  <% if contact.errors.any? %>
    <div class="p-3 bg-red-50 border border-red-200 rounded-lg">
      <ul class="text-sm text-red-700 space-y-1">
        <% contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-2 gap-3">
    <div class="contact-field-group">
      <%= f.label :first_name, class: "block text-xs font-medium text-gray-700 mb-1" %>
      <%= f.text_field :first_name,
            class: "w-full px-3 py-2 text-sm border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 #{contact.errors[:first_name].any? ? 'border-red-400' : 'border-gray-300'}" %>
      <% if contact.errors[:first_name].any? %>
        <p class="mt-1 text-xs text-red-600"><%= contact.errors[:first_name].first %></p>
      <% end %>
    </div>
    <div class="contact-field-group">
      <%= f.label :last_name, class: "block text-xs font-medium text-gray-700 mb-1" %>
      <%= f.text_field :last_name,
            class: "w-full px-3 py-2 text-sm border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 #{contact.errors[:last_name].any? ? 'border-red-400' : 'border-gray-300'}" %>
      <% if contact.errors[:last_name].any? %>
        <p class="mt-1 text-xs text-red-600"><%= contact.errors[:last_name].first %></p>
      <% end %>
    </div>
  </div>

  <div class="contact-field-group">
    <%= f.label :email, class: "block text-xs font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email,
          class: "w-full px-3 py-2 text-sm border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 #{contact.errors[:email].any? ? 'border-red-400' : 'border-gray-300'}" %>
    <% if contact.errors[:email].any? %>
      <p class="mt-1 text-xs text-red-600"><%= contact.errors[:email].first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :phone, class: "block text-xs font-medium text-gray-700 mb-1" %>
    <%= f.telephone_field :phone,
          class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <%# Company select with reactive dependent fields %>
  <div>
    <%= f.label :company_id, "Company", class: "block text-xs font-medium text-gray-700 mb-1" %>
    <div class="flex gap-2 items-start">
      <div class="flex-1">
        <%= f.select :company_id,
              options_from_collection_for_select(@companies, :id, :name, contact.company_id),
              { include_blank: "— None —" },
              "up-watch" => "",
              "up-target" => "#company-fields",
              "up-watch-delay" => "0",
              class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <%# Create company subinteraction — opens nested modal; up-on-accepted injects the new option %>
      <%= link_to "+ New company", new_company_path,
            "up-layer" => "new modal",
            "up-on-accepted" => "let opt = new Option(event.value.name, event.value.id, true, true); document.querySelector('#contact_company_id').add(opt); document.querySelector('#contact_company_id').value = event.value.id;",
            class: "text-xs text-blue-600 hover:text-blue-800 whitespace-nowrap pt-2" %>
    </div>

    <%# Reactive dependent company fields — re-rendered on select change %>
    <div id="company-fields">
      <%= render 'company_fields', contact: contact %>
    </div>
  </div>

  <%# Tags checklist %>
  <% if @tags&.any? %>
    <div>
      <span class="block text-xs font-medium text-gray-700 mb-2">Tags</span>
      <div class="flex flex-wrap gap-2">
        <% @tags.each do |tag| %>
          <label class="flex items-center gap-1.5 cursor-pointer">
            <%= f.check_box :tag_ids, { multiple: true, checked: contact.tag_ids.include?(tag.id) }, tag.id, false,
                  class: "rounded" %>
            <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium text-white"
                  style="background-color: <%= tag.color %>;">
              <%= tag.name %>
            </span>
          </label>
        <% end %>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :notes, class: "block text-xs font-medium text-gray-700 mb-1" %>
    <%= f.text_area :notes, rows: 3,
          class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none" %>
  </div>

  <div class="flex justify-end gap-3 pt-2">
    <button type="button" class="px-4 py-2 text-sm text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50"
            up-dismiss="">Cancel</button>
    <%= f.submit contact.new_record? ? "Create Contact" : "Save Changes",
          class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
