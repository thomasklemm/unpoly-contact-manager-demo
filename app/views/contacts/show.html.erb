<%# Full two-panel layout — same as index but with this contact's detail open %>

<%= render 'sidebar' %>

<%# RIGHT PANEL: this contact's detail %>
<div id="contact-detail" data-contact-id="<%= @contact.id %>">
  <%= render 'contact_detail', contact: @contact %>
</div>

<%# Hidden row fragment — lets Unpoly update the sidebar row on star/archive %>
<div hidden>
  <%= render 'contact_row', contact: @contact %>
</div>
