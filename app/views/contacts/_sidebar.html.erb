<%# LEFT PANEL: sidebar wrapper (search lives here, outside the replaced fragment) %>
<%# Accepts optional locals: q (search value) and filter (active filter) %>
<% sidebar_q = local_assigns.fetch(:q, nil) %>
<% sidebar_filter = local_assigns.fetch(:filter, nil) %>

<div id="contacts-sidebar">
  <%# App branding + search %>
  <div class="p-4 pb-3">
    <div class="flex items-center justify-between mb-4">
      <h1 class="font-display text-xl text-white tracking-tight">Contacts</h1>
      <div class="flex items-center gap-1.5">
        <%# Companies link %>
        <%= link_to companies_path,
              class: "flex items-center justify-center w-8 h-8 rounded-lg text-gray-400 hover:text-gray-200 hover:bg-white/8 transition-colors",
              title: "Companies" do %>
          <svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9 22 9 12 15 12 15 22"/>
          </svg>
        <% end %>
        <%= link_to new_contact_path,
              "data-overlay-link" => "",
              "up-on-accepted" => "var url = event.value; up.render({ target: '#contact-detail', url: url, history: true }); up.reload('#contacts-list').then(function(){ var m = (url || '').match(/\\/contacts\\/(\\d+)/); if(m){ var r = document.querySelector('.contact-row-' + m[1]); if(r) setTimeout(function(){ r.scrollIntoView({behavior:'smooth', block:'nearest'}); }, 50); } })",
              class: "flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-accent/20 text-accent hover:bg-accent/30 transition-colors text-sm font-medium",
              title: "New Contact" do %>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><line x1="8" y1="3" x2="8" y2="13"/><line x1="3" y1="8" x2="13" y2="8"/></svg>
          New
        <% end %>
      </div>
    </div>

    <%# Search form — never inside #contacts-list, so focus survives fragment swaps %>
    <%= form_with url: contacts_path, method: :get,
          id: "contacts-search-form",
          class: "relative",
          html: {
            "up-target" => "#contacts-list",
            "up-focus" => "keep",
            "up-scroll" => "false"
          } do |f| %>
      <%# Hidden filter field — kept in sync by the up.compiler in application.js %>
      <input type="hidden" id="search-filter" name="filter" value="<%= sidebar_filter %>">
      <svg class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 pointer-events-none" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
      <%= f.search_field :q,
            value: sidebar_q,
            placeholder: "Search contacts...",
            autocomplete: "off",
            "up-autosubmit" => "",
            "up-watch-delay" => "300",
            class: "sidebar-search w-full pl-9 pr-3 py-2 text-sm rounded-lg" %>
    <% end %>
  </div>

  <%# Contact list fragment — replaced on search/filter changes %>
  <%# data-filter is read by up.compiler to keep the search form's hidden field in sync %>
  <div id="contacts-list" class="flex-1 overflow-y-auto" data-filter="<%= sidebar_filter %>">
    <%= render 'contacts/contacts_list', contacts: (@contacts || Contact.none) %>
  </div>
</div>
