<%# Two-panel contact manager layout %>

<%= render 'sidebar', q: params[:q], filter: params[:filter] %>

<%# RIGHT PANEL: contact detail %>
<div id="contact-detail" class="flex items-center justify-center">
  <div class="text-center">
    <div class="w-20 h-20 rounded-2xl bg-surface-muted flex items-center justify-center mx-auto mb-4">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#c4bfb6" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
        <circle cx="12" cy="7" r="4"/>
      </svg>
    </div>
    <p class="font-display text-xl text-gray-400 italic">Select a contact</p>
    <p class="text-xs text-gray-400 mt-1.5">Choose from the list to view details</p>
  </div>
</div>
