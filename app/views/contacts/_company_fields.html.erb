<%# Dependent fields shown when a company is selected %>
<% if contact.company_id.present? %>
  <% selected_company = Company.find_by(id: contact.company_id) %>
  <% if selected_company&.website.present? %>
    <p class="mt-2 text-xs text-gray-500 flex items-center gap-1.5">
      <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
      <a href="<%= selected_company.website %>" target="_blank" rel="noopener"
         class="text-accent hover:text-accent-dark transition-colors"><%= selected_company.website %></a>
    </p>
  <% end %>
<% end %>
