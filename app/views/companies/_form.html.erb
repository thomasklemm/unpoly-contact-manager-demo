<%= form_with model: company, class: "space-y-4" do |f| %>
  <% if company.errors.any? %>
    <div class="p-3 bg-red-50 border border-red-200 rounded-lg">
      <ul class="text-sm text-red-700 space-y-1">
        <% company.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-xs font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name,
          class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 #{company.errors[:name].any? ? 'border-red-400' : ''}" %>
    <% if company.errors[:name].any? %>
      <p class="mt-1 text-xs text-red-600"><%= company.errors[:name].first %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :website, class: "block text-xs font-medium text-gray-700 mb-1" %>
    <%= f.url_field :website, placeholder: "https://example.com",
          class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex justify-end gap-3 pt-2">
    <button type="button" class="px-4 py-2 text-sm text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50"
            up-dismiss="">Cancel</button>
    <%= f.submit company.new_record? ? "Create Company" : "Save",
          class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
